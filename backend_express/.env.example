# Required
POSTGRES_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME
JWT_SECRET=change-me

# Optional
PORT=3001
HOST=0.0.0.0

# Comma-separated list of allowed frontend origins.
# Example (local dev + preview): http://localhost:3000,https://vscode-internal-xxxx.beta01.cloud.kavia.ai:3000
CORS_ORIGINS=http://localhost:3000

# WebSocket path (frontend WS URL will be ws(s)://<backend-host>:<port><WS_PATH>)
WS_PATH=/ws

# If running behind a proxy/load balancer (common in previews), keep TRUST_PROXY=true.
TRUST_PROXY=true

SESSION_SECRET=change-me-too
SESSION_TTL_DAYS=14
NODE_ENV=development
